CREATE TABLE users (
	id SERIAL PRIMARY KEY, 
	name TEXT NOT NULL, 
	email TEXT UNIQUE NOT NULL, 
	password TEXT NOT NULL, 
	foto TEXT NOT NULL);

SELECT * FROM users;

CREATE TABLE login (
	id SERIAL PRIMARY KEY,
	"idUser" INTEGER NOT NULL,
	token TEXT NOT NULL
);

SELECT * FROM login;

CREATE TABLE posts ( 
	id SERIAL PRIMARY KEY,
	"idUser" INTEGER NOT NULL,
	link TEXT NOT NULL,
	"description" TEXT,
	createdAt TIMESTAMP NOT NULL 
);

SELECT * FROM posts